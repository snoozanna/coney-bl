:: header[nobr]
<header>
</header>

:: footer[nobr]
<footer>
    <<button "Back">>
        <<goto "landing">>
    <</button>>
</footer>


:: landing [nobr]
<<set $task1 to false>>
<<set $tasks to []>>
<<for _i to 1; _i lt 26; _i++>>
    <<set $tasks.push({
        task: _i,
        complete: false
    })>>
<</for>>
<div class="desktop-message" style="display: none;">
  <p>Please view this poll on a phone.</p>
</div>
<main>


    <<button "Bingo">>
        <<goto "bingo">>
    <</button>>
        <<button "Mentimeter">>
        <<goto "mentimeter">>
    <</button>>
</main>

:: mentimeter[nobr]
<div class="menti-wrapper"><iframe src="https://www.menti.com/alufmwvidw87" width="100%" height="500px" frameborder="0" allowfullscreen></iframe></div>

    <<include "footer">>

:: bingo[nobr]

<<include "header">>
<main>

<div class="bingo-container">
   <<for _i to 1; _i lt 26; _i++>>
    <<capture _i>>
        <<set $img to "assets/img/" + _i + ".png">>
        <div class="bingo-square" sc-eval:id="'task' + _i" sc-eval:data-id="_i">
            <<link [img[$img][_i]]>>
                <<set $current to _i>>
                <<goto "_templateTask">>
            <</link>>
        </div>
    <</capture>>
    <</for>>
</div>

</main>
    <<include "footer">>

<<timed 0.1s>>
<<include "reviewScores">>
<</timed>>

:: reviewScores
<<for _i to 0; _i lt $tasks.length; _i++>>
    <<if $tasks[_i].complete is true>>
        <<set $id to "#task" + _i >>
        <<addclass $id "complete">>
    <</if>>
<</for>>


:: 1 [nobr]
<main>
    <h2>Task 1</h2>
    
    <p>Have you completed this task?</p>
    <<button "Yes">>
       <<set $task1 to true>>
       <<set $tasks[_i].complete to true>>
        <<goto "bingo">>
    <</button>>
    <<button "No">>
       <<set $task1 to false>>
        <<goto "bingo">>
    <</button>>
</main>

