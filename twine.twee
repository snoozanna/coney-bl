:: _templateTask[nobr]
 <main>

    <h2>Task $current</h2>
    <<include $current+"task">>

    <p>Have you completed this task?</p>
    <<button "Yes">>
       <<set $tasks[$current].complete to true>>
        <<goto "bingo">>
    <</button>>
    <<button "No">>
       <<set $tasks[$current].complete to false>>
        <<goto "bingo">>
    <</button>>
    </main>
   

